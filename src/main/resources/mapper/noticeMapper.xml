<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.project.myapp.notice.mapper.NoticeMapper">

    <select id="findAll" resultMap="noticeMap">
        SELECT id, title, content, who, create_date, update_date
        FROM notice LIMIT 200
    </select>

    <select id="findByPage" parameterType="Integer" resultMap="noticeMap">
        SELECT id, title, content, who, create_date, update_date
        FROM notice LIMIT #{startIdx},10
    </select>

    <select id="getNoticeTotalCount" resultType="int">
        SELECT count(*)
        FROM notice
    </select>

    <select id="noticeSearchSelectPage" parameterType="com.project.myapp.dto.SearchCondition" resultMap="noticeMap">
        SELECT id, title, content, who, create_date, update_date
        FROM notice
        WHERE TRUE
        <choose>
            <when test='option=="T"'>
                and title like concat('%', #{keyword} , '%')
            </when>
            <when test='option=="W"'>
                and who like concat('%' , #{keyword} , '%')
            </when>
            <otherwise>
                and (title like concat('%', #{keyword} , '%')
                or content like concat('%', #{keyword} , '%'))
            </otherwise>
        </choose>
        ORDER BY id DESC
        LIMIT #{offset} , #{pageSize}
    </select>

    <select id="getSearchNoticeResultCount" parameterType="com.project.myapp.dto.SearchCondition" resultType="int">
        SELECT COUNT(*)
        FROM notice
        WHERE TRUE
        <choose>
            <when test='option=="T"'>
                and title like concat('%', #{keyword} , '%')
            </when>
            <when test='option=="W"'>
                and who like concat('%' , #{keyword} , '%')
            </when>
            <otherwise>
                and (title like concat('%', #{keyword} , '%')
                or content like concat('%', #{keyword} , '%'))
            </otherwise>
        </choose>
        ORDER BY id DESC
    </select>

    <resultMap type="com.project.myapp.dto.NoticeDTO" id="noticeMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="who" column="who"/>
        <result property="create_date" column="create_date"/>
        <result property="update_date" column="update_date"/>
    </resultMap>

</mapper>